/*
    Basic mixin which vendorizes a propery. Usage:

    vendorize(box-sizing, border-box)
*/
vendorize(property, value)
  -webkit-{property} value
  -moz-{property} value
  -ms-{property} value
  -o-{property} value
  {property} value

animation(a)
  vendorize(animation, a)

border-radius(r)
  vendorize(border-radius, r)

box-shadow(s)
  vendorize(box-shadow, s)

transform(t)
  vendorize(transform, t)

transform-origin(o)
  vendorize(transform-origin, o)

transition(t)
  vendorize(transition, t)

transition-delay(d)
  vendorize(transition-delay, d)

placeholder-color(c)
  &::-webkit-input-placeholder
    color: c
  &:-moz-placeholder
    color: c
  &::-moz-placeholder
    color: c
  &:-ms-input-placeholder
    color: c
